
<% if @range == "User" %>
  <h2>Users search for "<%= "#{params[:word]}" %>"</h2>
 <% else %>
  <h2>Books search for "<%= "#{params[:word]}" %>"</h2>
<% end %>


<table class="table table-hover table-inverse">

  <% if @range == "User" %>
     <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
    </tr>
  </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>

  <% else %>

    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>